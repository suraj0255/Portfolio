@inject NavigationManager NavigationManager

<nav class="glass-navbar">
    <div class="navbar-left">
        <span class="user-icon">
            <img src="images/SurajKushwaha.JPG" alt="Profile" class="user-photo" />
        </span>
        <span class="navbar-title">Suraj Kushwaha</span>
    </div>

    <div class="hamburger" onclick="toggleMenu()">&#9776;</div>

    <div class="nav-links" id="navLinks">
        <NavLink class="nav-link" href=""> <i class="fas fa-home"></i> Home </NavLink>
        <NavLink class="nav-link" href="about"> <i class="fas fa-user"></i> About </NavLink>
        <NavLink class="nav-link" href="projects"> <i class="fas fa-code"></i> Projects </NavLink>
        <NavLink class="nav-link" href="skills"> <i class="fas fa-brain"></i> Skills </NavLink>
        @* <NavLink class="nav-link" href="achievements"> <i class="fas fa-trophy"></i> Achievements </NavLink>
        <NavLink class="nav-link" href="certifications"> <i class="fas fa-certificate"></i> Certifications </NavLink> *@
        <NavLink class="nav-link" href="education"> <i class="fas fa-graduation-cap"></i> Education </NavLink>
        <NavLink class="nav-link" href="contactMe"> <i class="fas fa-envelope"></i> Contact </NavLink>
    </div>
</nav>

<style>
    .glass-navbar {
        position: sticky;
        top: 0;
        z-index: 100;
        backdrop-filter: blur(24px);
        background: rgba(30, 30, 30, 0.85);
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.3);
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 2rem;
    }

    .navbar-left {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .navbar-title {
        font-family: 'Poppins', sans-serif;
        font-size: 1.45rem;
        font-weight: 700;
        color: #ffbe55;
        white-space: nowrap;
    }

    .user-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 45px;
        width: 45px;
        border-radius: 50%;
        background: #2ecc71;
        border: 2px solid #ffbe55;
        overflow: hidden;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }

    .user-photo {
        height: 100%;
        width: 100%;
        object-fit: cover;
    }

    .nav-links {
        display: flex;
        gap: 2rem;
        align-items: center;
        transition: max-height 0.3s ease;
    }

    .nav-link {
        color: #f5f5f5;
        padding: 0.5em 1.15em;
        border-radius: 1rem;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.15s ease;
    }

        .nav-link.active,
        .nav-link:hover {
            background: linear-gradient(135deg, #ffbe55 0%, #2ecc71 100%);
            color: #000;
            font-weight: 700;
            box-shadow: 0 0 10px rgba(255, 190, 85, 0.3);
        }

    .hamburger {
        display: none;
        font-size: 1.8rem;
        cursor: pointer;
        color: #ffbe55;
    }

    @@media (max-width: 768px) {
        .nav-links {
            flex-direction: column;
            gap: 1rem;
            width: 100%;
            max-height: 0;
            overflow: hidden;
            background: rgba(0, 0, 0, 0.9);
            border-radius: 0 0 1rem 1rem;
            padding: 0;
        }

            .nav-links.show {
                max-height: 500px;
                padding: 1rem 0;
            }

        .hamburger {
            display: block;
        }
    }
</style>

<script>
    function toggleMenu() {
        document.getElementById("navLinks").classList.toggle("show");
    }
</script>
